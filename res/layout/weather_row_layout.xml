<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
>
<RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  <ImageView
  	android:id="@+id/weather_icon"
  	android:layout_width="wrap_content"
  	android:layout_height="120dp"
  	android:layout_alignParentTop="true"
  	android:layout_alignParentBottom="true"
  	android:layout_alignParentLeft="true"
  	android:layout_marginRight="16dp"
  	android:layout_marginLeft="16dp"
  	android:adjustViewBounds="true"
  	/>
  
  <TextView
  	android:id="@+id/weather_condition_text"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@id/weather_icon"
  	android:layout_alignParentBottom="true"
  	android:layout_alignParentRight="true"
  	android:text="FORECAST CONDITIONS"
  	android:textAppearance="@style/weather_font"
  	android:ellipsize="marquee"
  	/>
  <TextView
  	android:id="@+id/weather_high_temp_text"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@id/weather_icon"
  	android:layout_above="@id/weather_condition_text"
  	android:layout_alignParentRight="true"
  	android:text="HIGH TEMP"
  	android:textAppearance="@style/weather_max_font"
  	android:ellipsize="marquee"
  	/>
  <TextView
  	android:id="@+id/weather_low_temp_text"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@id/weather_icon"
  	android:layout_above="@id/weather_high_temp_text"
  	android:layout_alignParentRight="true"
  	android:text="LOW TEMP"
  	android:textAppearance="@style/weather_min_font"
  	android:ellipsize="marquee"
  	/>
  <TextView
  	android:id="@+id/weather_dow_text"
  	android:paddingTop="3dip"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@id/weather_icon"
  	android:layout_above="@id/weather_low_temp_text"
  	android:layout_alignParentTop="true"
  	android:layout_alignParentRight="true"
  	android:gravity="top"
  	android:text="DAY OF WEEK"
  	android:textAppearance="@style/weather_dow_font"
  	android:autoLink="web|email"
  	/>
</RelativeLayout>
</LinearLayout>
