<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
>
<RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  <ImageView
  	android:id="@+id/tweet_avatar_view"
  	android:layout_width="wrap_content"
  	android:layout_height="120dp"
  	android:src="@drawable/ic_launcher"
  	android:layout_alignParentTop="true"
  	android:layout_alignParentBottom="true"
  	android:layout_alignParentLeft="true"
  	android:layout_marginRight="16dp"
  	android:layout_marginLeft="16dp"
  	android:adjustViewBounds="true"
  	/>
  
  <TextView
  	android:id="@+id/tweet_timestamp_view"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@id/tweet_avatar_view"
  	android:layout_alignParentBottom="true"
  	android:layout_alignParentRight="true"
  	android:text="second row"
  	android:textAppearance="@style/tweet_date_font"
  	android:ellipsize="marquee"
  	/>
  <TextView
  	android:id="@+id/tweet_message_view"
  	android:paddingTop="3dip"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_toRightOf="@id/tweet_avatar_view"
  	android:layout_alignParentTop="true"
  	android:layout_alignParentRight="true"
  	android:layout_above="@id/tweet_timestamp_view"
  	android:gravity="top"
  	android:text="first row"
  	android:textAppearance="@style/tweet_font"
  	android:autoLink="web|email"
  	/>
</RelativeLayout>
</LinearLayout>
